{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe сборка активного файла",
            "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",

                "-g",
                
                "${file}",
                "${fileDirname}\\flags\\flags_analys.c",
                "${fileDirname}\\file\\Bin\\bin_converter.c",
                "${fileDirname}\\file\\FileName\\file_exten.c",
                "${fileDirname}\\file\\FileCopy\\file_copy_txt.c",
                "${fileDirname}\\file\\FileCopy\\file_copy_hex.c",

                "-DDEBUG",

                "-I","${fileDirname}\\include",

                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.a"
